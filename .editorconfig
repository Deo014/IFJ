# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{package.json}]
indent_style = space
indent_size = 2
